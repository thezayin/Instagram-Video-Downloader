<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IGReelDownloader" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:statusBarColor">@color/white</item>
    </style>


    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>
    <style name="CustomText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeMaxTextSize">17sp</item>
        <item name="autoSizeMinTextSize">13sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ContainersColor">
        <item name="android:background">#CECCCBCB</item>

    </style>

    <style name="Theme.IGReelDownloader" parent="Base.Theme.IGReelDownloader" />
</resources>