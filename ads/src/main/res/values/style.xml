<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Density" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Density" parent="">
        <item name="cornerSize">50dp</item>
    </style>


    <style name="SliderTooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/background</item>
        <item name="android:textAppearance">@style/SliderTooltip.TextAppearance</item>
    </style>

    <style name="SliderTooltip.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:background">@color/surface</item>
        <item name="colorPrimary">@color/primary_text</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitleText</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10dp" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/primary_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/gilroy</item>
        <item name="android:maxLines">10</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize4dp" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="MaterialAlertDialogTitleText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/primary_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/SliderTooltip</item>
        <item name="labelBehavior">floating</item>
        <item name="haloRadius">0dp</item>
        <item name="thumbColor">@color/white</item>
        <item name="thumbRadius">12dp</item>
        <item name="trackColorActive">@color/primary_blue</item>
        <item name="trackColorInactive">@color/white_60opaque</item>
        <item name="trackHeight">8dp</item>
    </style>

    <style name="EditorScreenOnBoardingStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>

    </style>
</resources>